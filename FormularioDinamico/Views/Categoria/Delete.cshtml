@model FormularioDinamico.BindModels.CategoriaBM

@{
    ViewBag.Title = "Remover categoria";
}

<h2>Remover categoria</h2>

<h3>Deseja realmente remover esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <span class="text-danger field-validation-error"><span>@ViewBag.ErrorMessage</span></span>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Slug)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slug)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
            <input type="submit" value="Remover" class="btn btn-danger" /> 
        </div>
    }
</div>
